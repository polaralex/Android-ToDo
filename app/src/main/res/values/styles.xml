<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="BrightErasmus" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/material_blue_100</item>
        <item name="colorAccent">@color/red_accent</item>
        <item name="android:textColorPrimary">@android:color/primary_text_light</item>
        <item name="android:colorForeground">@color/foreground_material_light</item>
        <item name="android:textColorSecondary">@android:color/secondary_text_light</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ErasmusAppBrightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/holo_orange_darker</item>
        <item name="colorAccent">@color/red_accent</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="ErasmusAppBrightTheme.AppBarOverlay"
           parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="ErasmusAppBrightTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Europe.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/europe_blue_darker</item>
        <item name="colorAccent">@color/red_accent</item>
        <item name="colorPrimary">@color/europe_blue</item>
    </style>

    <style name="Europe.Light.Toolbar">
        <item name="android:textColorPrimary">@color/almostWhite</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:actionDropDownStyle">@style/AppTheme</item>
    </style>

</resources>
